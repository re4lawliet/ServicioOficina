<h1>Listado de Ajustadores</h1>
<div class="row">
  {{#each ajustadores2 }}
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title d-flex justify-content-between align-items-center">
            {{ correo }}               
            </h4>
            <a href="/vehiculos/ver/{{_id}}"><i class="fas fa-edit"></i></a>
           
            <p> {{ nombres }},{{ apellidos }}, {{ dpi }},{{ rol }},{{ telefono }}, {{direccion}} </p>
            <!-- DELETE REQUEST -->
            <form action="/admin/delete_ajustador/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
            </form>
            
        </div>
        </div>
    </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola </h1>
      <p clsss="lead">No has creado ningun ajustador.</p>
      <a href="/admin/new_ajustador" class="btn btn-success btn-block">Create Uno!</a>
    </div>
  </div>
  {{/each}}
</div>